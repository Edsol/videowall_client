generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}

model config {
  id      Int      @id @default(autoincrement())
  title   String   @unique
  type    String
  string  String?
  boolean Boolean?
  number  Decimal?
  json    String?
}

model display {
  id           Int          @id @default(autoincrement())
  port         String       @unique
  primary      Boolean      @default(false)
  width        Int?
  height       Int?
  left         Int
  top          Int
  position     String
  urlHistories urlHistory[]
}

model urlHistory {
  id        Int      @id @default(autoincrement())
  datetime  DateTime @default(now())
  url       String
  display   display  @relation(fields: [displayId], references: [id])
  displayId Int
  pid       Int
  closed    Boolean  @default(false)
}
